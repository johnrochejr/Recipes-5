<div class="page-header">
  <%= link_to new_ingredient_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Ingredient
  <% end %>
  <h1 Listing>ingredients</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Recipes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.item %></td>
        <td><%= ingredient.description %></td>
        <td><%= ingredient.recipes %></td>
        <td>
          <%= link_to ingredient do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_ingredient_path(ingredient) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to ingredient, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
